<Page x:Class="WPFCryptoDisplay.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFCryptoDisplay"
      mc:Ignorable="d"      
      Title="SearchPage" Height="450" Width="800">

    <Grid>
        <TextBox TextChanged="TextBox_TextChanged" x:Name="SearchBar" HorizontalAlignment="Center" Height="35" Margin="0,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="710"/>
        <ScrollViewer HorizontalAlignment="Center" Height="322" Margin="0,105,0,0" VerticalAlignment="Top" Width="710">
            <Grid>
                <ListBox x:Name="SearchResults">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock FontSize="18" Text="{Binding name}"/>
                                <TextBlock FontSize="14" Text="{Binding priceUsd}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
