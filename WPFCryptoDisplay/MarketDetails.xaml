<Page x:Class="WPFCryptoDisplay.MarketDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFCryptoDisplay"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarketDetails">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="60,20,0,0" TextWrapping="Wrap" FontSize="20" Text="{Binding currency}" VerticalAlignment="Top" Width="170"/>
        <ScrollViewer HorizontalAlignment="Left" Height="319" Margin="60,85,0,0" VerticalAlignment="Top" Width="715">
            <Grid>
                <ListBox x:Name="Markets">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock FontSize="18" Text="{Binding exchangeId}"/>
                                <TextBlock FontSize="14" Text="{Binding priceUsd}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
